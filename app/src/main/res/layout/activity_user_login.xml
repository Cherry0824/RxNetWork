<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.rxjava.net.ui.user.UserLoginActivity">


    <include layout="@layout/layout_title"></include>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_66"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32">

        <View
            android:id="@+id/login_name_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32">

        <ImageView
            android:id="@+id/login_clear_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete" />

        <View
            android:id="@+id/login_pwd_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/login_clear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32"
        android:visibility="gone">

        <ImageView
            android:id="@+id/login_clear_pwd_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete" />

        <View
            android:id="@+id/login_pwd_line_rp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:background="@color/gary_f5f5f9" />

        <EditText
            android:id="@+id/login_pwd_rp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/gary_333333"
            android:textColorHint="@color/gary_999999"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>

    <TextView
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/round_main_style_blue"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32">


        <TextView
            android:id="@+id/login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="忘记密码？"
            android:textColor="@color/main_style_blue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:text="立即注册"
            android:textColor="@color/main_style_blue"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>
</LinearLayout>
