<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8">

    <ImageView
        android:id="@+id/collection_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_collection_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="让你明明白白的使用RecyclerView——SnapHelper详解"
            android:textColor="@color/gary_333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:textColor="@color/gary_999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/collection_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:maxLines="1"
                android:text="Cherry"
                android:textColor="@color/gary_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_6"
                android:text="分类"
                android:textColor="@color/gary_999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/collection_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="弘扬"
                android:textColor="@color/gary_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/collection_push_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2018-11-30"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>